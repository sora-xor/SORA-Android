<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="searchViewHeight">@dimen/search_view_height</item>
        <item name="colorSecondary">@color/secondaryGreen</item>
        <item name="colorControlNormal">@color/neu_on_background</item>
        <item name="android:statusBarColor">?attr/baseBackground</item>
        <item name="android:navigationBarColor">?attr/baseBackground</item>
        <item name="android:windowBackground">?attr/baseBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">true</item>
        <item name="android:textColorHint">?attr/disabledButtonTextColor</item>

        <!--  status colors  -->
        <item name="statusSuccess">@color/successGreen</item>
        <item name="statusSuccessBackground">@color/successBackgroundStatus</item>
        <item name="statusWarning">@color/warningStatus</item>
        <item name="statusWarningBackground">@color/warningBackgroundStatus</item>
        <item name="statusError">@color/errorStatus</item>
        <item name="statusErrorBackground">@color/errorBackgroundStatus</item>

        <!--  content  -->
        <item name="contentPrimary">@color/brand_pmsblack</item>
        <item name="contentSecondary">@color/grey_700</item>
        <item name="contentTertiary">@color/grey_500</item>
        <item name="contentQuaternary">@color/grey_400</item>
        <item name="baseBackground">@color/neu_color_300</item>
        <item name="baseBackgroundSecond">@color/neu_color_white</item>
        <item name="baseBackgroundDark">@color/backgroundDarkColor</item>
        <item name="baseBorderPrimary">@color/grey_300</item>
        <item name="baseBorderSecondary">@color/grey_200</item>
        <item name="baseBackgroundHover">@color/grey_200</item>
        <item name="baseDisabled">@color/grey_100</item>
        <item name="baseOnDisabled">@color/grey_400</item>
        <item name="baseOnAccent">@color/brand_white</item>

        <item name="buttonPrimary">@color/brand_soramitsu_red</item>
        <item name="buttonPrimaryDark">@color/neu_pressed_red</item>
        <item name="polkaswapPrimary">@color/neu_brand_polkaswap</item>
        <item name="polkaswapPrimaryDark">@color/neu_pressed_polkaswap</item>
        <item name="disabledButtonColor">@color/neu_disabled_grey</item>
        <item name="disabledButtonTextColor">@color/neu_disabled_text_grey</item>
        <item name="disabledButtonTextColor2">@color/neu_disabled_text_grey_2</item>

        <item name="secondaryBackground">@color/grey_100</item>
        <item name="secondaryHover">@color/hoverSecondaryColor</item>
        <item name="secondaryPressed">@color/pressedSecondaryColor</item>
        <item name="secondaryFocused">@color/focusedSecondaryColor</item>

        <item name="polkaswapBackground">@color/polkaswap_background_alfa</item>
        <item name="polkaswapMainColor">@color/neu_brand_polkaswap</item>
        <item name="dividerColor">@color/neu_divider_color</item>
        <item name="balanceColorDefault">@color/neu_black_default</item>
        <item name="balanceColorPositive">@color/neu_positive</item>
        <item name="balanceColorNegative">@color/neu_negative</item>
        <item name="fiatBalanceColorDefault">@color/neu_fiat_balance_color</item>
        <item name="tintColorDark">@color/neu_tint_dark</item>
        <item name="bottomMenuInactiveColor">@color/neu_bottom_menu_inactive</item>
        <item name="tintColorLight">@color/neu_tint_light</item>
        <item name="onBackgroundColor">@color/neu_on_background</item>
        <item name="selectedPrimaryColor">@color/neu_selected_primary</item>
        <item name="shadowDark">@color/neu_shadow_dark_on_day</item>
        <item name="shadowLight">@color/neu_shadow_light_on_day</item>
        <item name="tintTitles">@color/neu_tint_titles_light</item>
        <item name="disabledColor">@color/neu_disabled_on_day</item>
        <item name="titleColor">@color/neu_disabled_on_day</item>
        <item name="flatAboveBackground">@color/neu_color_200</item>
        <item name="backgroundInfo">@color/neu_background_info</item>
        <item name="statusColor">@color/neu_status</item>
        <item name="statusWarningColor">@color/neu_status_warning_day</item>
        <item name="pureBlackOnDay">@color/neu_color_black</item>
        <item name="pureWhiteOnDay">@color/neu_color_white</item>
        <item name="pureRedOnDay">@color/neu_color_red</item>
        <item name="statusPinkWarning">@color/neu_status_pink_warning_day</item>
        <item name="colorOnGrey">@color/neu_color_grey_100</item>
        <item name="backgroundSearchView">@color/neu_background_search_view</item>
        <item name="hintBackground">@color/neu_hint_background</item>
        <item name="textBackgroundColor">@color/neu_text_background</item>
        <item name="iconTintColorPositive">@color/neu_positive</item>
        <item name="iconTintColorNegative">@color/neu_selected_primary</item>
        <item name="iconTintAboveBackground">@color/tint_above_background</item>
        <item name="redesignTokenName">#281818</item>
        <item name="redesignTokenBalance">#9d8181</item>

        <item name="uikit_pinCodeButtonTitleColor">@color/neu_disabled_on_night</item>
        <item name="uikit_pinCodeButtonTextColor">@color/neu_brown_color</item>
        <item name="uikit_pinCodeButtonBackground">@drawable/rounded_button_background</item>
    </style>

    <style name="AppTheme.Onboarding">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="baseBackground">@color/neu_color_300</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="behavior_peekHeight">600dp</item>
        <item name="android:background">@null</item>
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/x4</item>
        <item name="cornerSizeTopLeft">@dimen/x4</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="Widget.Soramitsu.Button.PinCodeNumberButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/pin_code_button_size</item>
        <item name="android:layout_height">@dimen/pin_code_button_size</item>
        <item name="android:layout_marginStart">@dimen/x1_2</item>
        <item name="android:layout_marginEnd">@dimen/x1_2</item>
        <item name="android:layout_marginBottom">@dimen/x1</item>
        <item name="elevation">4dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">?attr/uikit_pinCodeButtonTextColor</item>
        <item name="android:background">?attr/uikit_pinCodeButtonBackground</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="background">?attr/uikit_pinCodeButtonBackground</item>
        <item name="android:textAppearance">@style/TextAppearance.Soramitsu.Neu.Semibold.34</item>
        <item name="android:textSize">@dimen/uikit_pin_code_button_text_size</item>
    </style>

    <style name="Widget.Soramitsu.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDuration">1300</item>
    </style>
</resources>